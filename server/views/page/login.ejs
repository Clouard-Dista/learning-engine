
<% layout('../layout') -%>

<link rel="stylesheet" type="text/css" href="/application/css/login.css">

<form class="bloc" action="/login" method="post">
	<h5>Login</h5>
    <div>
        <label>Username:</label>
        <input type="text" name="username"/>
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password"/>
    </div>
    <div>
        <input type="submit" value="Log In"/>
    </div>
<div id="loginMessage">
    <%=message.login%>
</div>

</form>


<form class="bloc" action="/signup" method="post">
	<h5>Inscription</h5>
    <div>
        <label>Username:</label>
        <input type="text" name="username"/>
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password"/>
    </div>
    <div>
        <input type="submit" value="Log In"/>
    </div>

<div id="singupMessage">
        <%=message.signup%>
</div>
</form>
